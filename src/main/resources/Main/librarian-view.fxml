<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.Pane?>
<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.LibrarianController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10" style="-fx-background-color: #37474F; -fx-border-color: #263238; -fx-border-width: 0 0 2 0;">
            <padding>
                <Insets left="20" right="20" />
            </padding>
            <Label fx:id="welcomeLabel" text="Dashboard" textFill="white">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Logout" />
        </HBox>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Pending Issue Requests">
                    <content>
                        <VBox spacing="10">
                            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                            <TableView fx:id="issueRequestsTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="issueMemberNameCol" text="Member Name" prefWidth="150"/>
                                    <TableColumn fx:id="issueMemberIdCol" text="Member ID" prefWidth="100"/>
                                    <TableColumn fx:id="issueBookTitleCol" text="Book Title" prefWidth="300"/>
                                    <TableColumn fx:id="issueBookIdCol" text="Book ID" prefWidth="100"/>
                                </columns>
                                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                            </TableView>
                            <Button text="Approve Selected" onAction="#handleApproveIssue" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Pending Return Requests">
                    <content>
                        <VBox spacing="10">
                            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                            <TableView fx:id="returnRequestsTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="returnMemberNameCol" text="Member Name" prefWidth="150"/>
                                    <TableColumn fx:id="returnMemberIdCol" text="Member ID" prefWidth="100"/>
                                    <TableColumn fx:id="returnBookTitleCol" text="Book Title" prefWidth="300"/>
                                    <TableColumn fx:id="returnBookIdCol" text="Book ID" prefWidth="100"/>
                                    <TableColumn fx:id="returnRatingCol" text="Rating" prefWidth="75"/>
                                </columns>
                                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                            </TableView>
                            <Button text="Accept Selected Return" onAction="#handleAcceptReturn" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Pending Publish Requests">
                    <content>
                        <VBox spacing="10">
                            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                            <TableView fx:id="publishRequestsTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="publishAuthorNameCol" text="Author Name" prefWidth="150"/>
                                    <TableColumn fx:id="publishAuthorIdCol" text="Author ID" prefWidth="100"/>
                                    <TableColumn fx:id="publishBookTitleCol" text="Book Title" prefWidth="300"/>
                                    <TableColumn fx:id="publishBookIdCol" text="Book ID" prefWidth="100"/>
                                </columns>
                                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                            </TableView>
                            <Button text="Approve Selected Publication" onAction="#handleApprovePublication" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>